<?xml version="1.0" encoding="UTF-8"?>
<ContentPage  x:Name="tilePage" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PurposeColor.ImageTileViewer">
	<ContentPage.Content>
	<Grid Padding="10,10,10,10" >

	 <Grid.RowDefinitions>
		<RowDefinition  Height = "3*"></RowDefinition>
		<RowDefinition Height = "1*"></RowDefinition>
	 </Grid.RowDefinitions>

		<Image  x:Name="previewImage" Grid.Row="0" ></Image>
		<ScrollView  x:Name="thumbArea" Grid.Row="1" ></ScrollView>
	</Grid>
	</ContentPage.Content>
</ContentPage>
